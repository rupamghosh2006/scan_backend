---
const currentPath = Astro.url.pathname;
import { ClientRouter } from "astro:transitions";

---

<nav class="bg-white shadow-md py-2 px-4 flex justify-between items-center sticky top-0 z-50">
  <div>
    <img src="/assets/logo.jpg" alt="Logo" class="h-10 w-auto rounded-full" />
  </div>
  <div class="space-x-2 text-sm md:space-x-4 md:text-base">
    <a 
      href="/" 
      class={`font-medium ${currentPath === "/" ? "text-cyan-700 border-b-2 border-cyan-700 font-semibold" : "text-gray-600 hover:text-cyan-600"}`}
    >Home</a>

    <a 
      href="/scan2" 
      class={`font-medium ${currentPath === "/scan2" ? "text-cyan-700 border-b-2 border-cyan-700 font-semibold" : "text-gray-600 hover:text-cyan-600"}`}
    >Scan</a>

    <a 
      href="/questionBank" 
      class={`font-medium ${currentPath === "/questionBank" ? "text-cyan-700 border-b-2 border-cyan-700 font-semibold" : "text-gray-600 hover:text-cyan-600"}`}
    >Q Bank</a>


    <a 
      href="/test" 
      class={`font-medium ${currentPath === "/test" ? "text-cyan-700 border-b-2 border-cyan-700 font-semibold" : "text-gray-600 hover:text-cyan-600"}`}
    >Test</a>

    <a 
      href="/profile" 
      class={`font-medium ${currentPath === "/profile" ? "text-cyan-700 border-b-2 border-cyan-700 font-semibold" : "text-gray-600 hover:text-cyan-600"}`}
    >Profile</a>
  </div>
</nav>
<ClientRouter />