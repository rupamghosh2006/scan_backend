---
const chapterMap = {
  "11-Physics": ["Units & Measurements", "Kinematics", "Laws of Motion", "Work, Power & Energy"],
  "11-Chemistry": ["Some Basic Concepts", "Structure of Atom", "Periodic Table", "Chemical Bonding"],
  "11-Math": ["Sets", "Relations & Functions", "Trigonometry", "Complex Numbers"],
  "11-Biology": ["Diversity of Living World", "Cell", "Plant Physiology", "Human Physiology"],
  "12-Physics": ["Electrostatics", "Current Electricity", "Magnetism", "Optics", "Modern Physics"],
  "12-Chemistry": ["Solid State", "Solutions", "Electrochemistry", "Chemical Kinetics", "Biomolecules"],
  "12-Math": ["Matrices & Determinants", "Differentiation", "Integration", "Vectors & 3D Geometry"],
  "12-Biology": ["Reproduction", "Genetics", "Evolution", "Human Health & Diseases"]
};

const classes = ["11", "12"];
const subjects = ["Physics", "Chemistry", "Math", "Biology"];
---

<div class="p-4 bg-gray-100 border-r h-full w-64">
  <h2 class="text-xl font-semibold mb-4">Filter</h2>
  <form method="GET" class="flex flex-col gap-4" onchange="this.submit()">
    <div>
      <label for="class" class="block mb-1 font-medium">Class</label>
      <select name="class" id="class" class="w-full p-2 border rounded">
        <option value="">-- Select Class --</option>
        {classes.map(c => <option value={c}>{c}</option>)}
      </select>
    </div>

    <div>
      <label for="subject" class="block mb-1 font-medium">Subject</label>
      <select name="subject" id="subject" class="w-full p-2 border rounded">
        <option value="">-- Select Subject --</option>
        {subjects.map(s => <option value={s}>{s}</option>)}
      </select>
    </div>

    <div>
      <label for="chapter" class="block mb-1 font-medium">Chapter</label>
      <select name="chapter" id="chapter" class="w-full p-2 border rounded">
        <option value="">-- Select Chapter --</option>
        {
          Object.entries(chapterMap).flatMap(([key, chapters]) =>
            chapters.map(ch => <option value={ch}>{ch}</option>)
          )
        }
      </select>
    </div>
  </form>
</div>
